<?xml version="1.0"?>
<openerp>
    <data>
    	

		<record id="trust_sales_order_followup_form" model="ir.ui.view">
			<field name="name">trust_sales_order_followup.order.form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<h1 position="before">
					<div class="oe_right oe_button_box" name="buttons">
                        <button class="oe_inline oe_stat_button" type="action"
                            name="%(crm.crm_case_categ_phone_outgoing0)d" icon="fa-phone"
                            context="{'default_sale_order_id': active_id, 'search_default_sale_order_id': active_id }">
                            <div>Schedule/Log<br/>Calls</div>
                        </button>
                        <button class="oe_inline oe_stat_button" type="action"
                            name="schedule_meetings" icon="fa-phone">
                            <field string="Meetings" name="meeting_count" widget="statinfo"/>
                        </button>
                    </div>
	             </h1>       
            </field>
		</record>


    </data>
</openerp>
